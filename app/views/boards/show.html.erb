<h2>Your Game!!!</h2>

<div id="world">
  <% @tiles.each do |t| %>
    <div class="tile <%= t.player.color_one.gsub(" ", "") %> <%= 'territory' if t.territory == true %>" data-x="<%= t.x_cords %>" data-y="<%= t.y_cords %>"></div>
  <% end %>

  <% @castles.each do |b| %>
    <div class="castle <%= b.player.color_one.gsub(" ", "") %>" data-x="<%= b.x_cord %>" data-y="<%= b.y_cord %>"></div> 
  <% end %>
</div>

<div id="game-stats">
  <% @houses = 0 %>
  <% @pop = 0 %>
  <% @this_game.player.buildings.each do |b| %>
    <% if b.board_id == @this_game.board_id && b.type == "House" %>
    <% @houses += 1 %>
    <% end %>
    <% if b.board_id == @this_game.board_id && b.type == "Castle" || "House" %>
    <% @pop += b.population if !b.population.nil? %>
    <% end %>
  <% end %>
  <p>Houses: <%= @houses %></p>
  <p>Population: <%= @pop %></p>

  <% @this_game.player.stats.each do |s| %>
    <% if s.board_id == @this_game.board_id %>
    <% @quests = s.quests %>
    <% @money = s.money %>
    <% end %>
  <% end %>
  <p>Quests: <%= @quests %></p>
  <p>Money: $<%= @money%></p>

</div>
