<%= form_for [@user, @player], :html => {:class => "new-player"} do |f| %>
  <h2>Create a Player</h2>
  <%= f.label :name %><br />
  <%= f.text_field :name %><br />
  <%= f.label :kingdom %><br />
  <%= f.text_field :kingdom %><br />
  <%= f.label :crest %><br />
  <%= f.select :crest, ["gargoyle", "griffin", "hydra", "phoenix", "siren", "unicorn", "wyvern"] %><br />
  <%= f.label :first_color %><br />
  <%= f.select :color_one, ["black","blue","gold","green","maroon","red","silver"] %><br />
  <%= f.label "Second color (Optional)" %><br />
  <%= f.select :color_two, ["none", "black","blue","gold","green","maroon","red","silver"] %><br />
  <%= f.label "Manifesto (Optional)" %><br />
  <%= f.text_area :manifesto %><br />

  <%= f.submit %>
<% end %>