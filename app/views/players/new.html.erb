<%= form_for [@user, @player], :html => {:class => "new-player"} do |f| %>
  <h2>Create a Player</h2>
  <%= f.label :name %><br />
  <%= f.text_field :name %><br />
  <%= f.label :kingdom %><br />
  <%= f.text_field :kingdom %><br />
  <%= f.label :crest %><br />
  <%= f.select :crest, ["Griffin", "Hydra", "Lycan", "Phoenix", "Siren", "Wyvern"] %><br />
  <%= f.label :first_color %><br />
  <%= f.select :color_one, ["Black","Blue","Gold","Green","Maroon","Orange","Red","Silver","White"] %><br />
  <%= f.label "Second color (Optional)" %><br />
  <%= f.select :color_two, ["None", "Black","Blue","Gold","Green","Maroon","Orange","Red","Silver","White"] %><br />
  <%= f.label "Manifesto (Optional)" %><br />
  <%= f.text_area :manifesto %><br />

  <%= f.submit %>
<% end %>